<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to the YelpCamp!</h1> 
                <p>View our hand-picked campgrounds from all over the world</p>
                <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Camping Ground</a></p>
                
                <!--Adding method explicitly will put this req.query instead of req.body-->
                <form action="/campgrounds" class="form-inline" method="GET">  
                    <div class="form-group">
                        <input id="searchField" type="text" class="form-control" name="search" placeholder="Search Campgrounds">
                        <input class="btn btn-primary" type="submit" value="Search">
                    </div>
                </form>
            </div>
        </header>
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% camps.forEach(function(camp) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src= "<%= camp.image %>"  alt="Not Available">
                        <div class="caption">
                            <h3><%= camp.name %></h3>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                    
                </div>
            <% }); %>
        </div>
    </div>

<% include ../partials/footer %>